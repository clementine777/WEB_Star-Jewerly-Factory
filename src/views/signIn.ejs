<!DOCTYPE html>
<html lang="en">
<%- include ('partials/heads.ejs', {headtittle: 'LOGIN' , cssForm1:'', cssForm2:'/styles/login/logIn.css' }); %>

<body class="grid-container">
  <%- include ('partials/header.ejs') %>
  <div class="banner"></div>

  <main class="main-container">
    <form id="loginForm" class="login-form" action="/signIn" method="POST" required>
      <label for="firstname">Enter your name </label>
      <input type="text" placeholder="Name" name="firstname" max="50" id="name" required />
      <br />
      <label for="lastname">Enter your lastname</label>
      <input type="text" placeholder="Lastname" name="lastname" max="50" id="lastname" required />
      <br />
      <label for="email">Enter your E-mail </label>
      <input type="email" placeholder="E-mail" name="email" max="50" id="email" required />

      <br />
      <label for="repeat-email">Repeat your E-mail </label>
      <input type="email" placeholder="Confirm E-mail" name="repeat_email" max="50" id="repeat_email" required />
      <span id="error-message-email"></span>
      <br />
      <label for="password">Enter the Password </label>
      <input type="password" placeholder="Password" name="password" id="password" required />
      <span id="error-message"></span>
      <br />
      <label for="repeatpassword">Repeat the Password </label>
      <input type="password" placeholder="Password" name="repeat_password" id="repeatpass_word" required />
      <span id="error-message2"></span>
      <br />
      <label for="termsofuse" class="text-terms-use"><a href="#">Acept ther terms of use an conditions of us! </a>
      </label>
      <input type="checkbox" name="terms_of_use " id="termsofuse" required />
      <br />
      <button type="submit">Sign In</button>
    </form>
  </main>

  <%- include ('partials/footer.ejs') %>
  <%- include ('partials/scripts.ejs') %>

</body>

</html>